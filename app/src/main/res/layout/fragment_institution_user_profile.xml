<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".view.user.fragments.institutionUser.InstitutionUserProfile">
    <ScrollView
        android:id="@+id/institution_user_mainmenu_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/institution_user_mainmenu_profile_picture"
                style="@style/circle_image_button_profile_picture_large"
                android:clipToOutline="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/institution_user_mainmenu_edtxt_username"
                style="@style/Edit_Text_Forms"
                android:layout_marginTop="40dp"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/institution_user_mainmenu_profile_picture"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/institution_user_mainmenu_edtxt_usertype"
                style="@style/Edit_Text_Forms"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/institution_user_mainmenu_edtxt_username"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/institution_user_mainmenu_edtxt_institution_name"
                style="@style/Edit_Text_Forms"
                android:enabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/institution_user_mainmenu_edtxt_usertype"
                tools:ignore="SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>