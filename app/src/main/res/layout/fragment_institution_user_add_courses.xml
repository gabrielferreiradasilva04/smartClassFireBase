<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundoapp"
    tools:context=".view.user.fragments.institutionUser.InstitutionUserAddCourses">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:orientation="vertical">
         <EditText
             android:id="@+id/useraddcourses_title"
             android:inputType="text"
             style="@style/Edit_Text_Forms"
             android:hint="Titulo"/>
         <androidx.appcompat.widget.AppCompatImageButton
             android:id="@+id/useraddcourses_searchbutton"
             android:clickable="true"
             style="@style/Button_Confirm_Forms"
             android:layout_marginTop="5dp"
             android:src="@drawable/baseline_search_24"
             tools:ignore="SpeakableTextPresentCheck" />
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/useraddcourses_recyclerview"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>
         <include
             android:id="@+id/empty_container_useraddcourses"
             layout="@layout/empty_request"
             android:visibility="gone"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             />

      </LinearLayout>
   </ScrollView>
</LinearLayout>