<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_container_search"
        android:layout_width="364dp"
        android:layout_height="166dp"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/container_institutions_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textInstitutionName_adapter_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextView_Institutions_RecyclerView"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@id/view_container_search"
        app:layout_constraintStart_toStartOf="@id/view_container_search"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textInstitutionCNPJ_adapter_search"
        style="@style/TextView_Institutions_RecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@id/view_container_search"
        app:layout_constraintStart_toStartOf="@id/view_container_search"
        app:layout_constraintTop_toBottomOf="@+id/textInstitutionName_adapter_search" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_blue"
        android:clickable="true"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_container_search"
        app:layout_constraintEnd_toEndOf="@+id/view_container_search"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="@+id/view_container_search"
        app:layout_constraintTop_toBottomOf="@+id/textInstitutionCNPJ_adapter_search"
        app:srcCompat="@drawable/add_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
