<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegisterForm"
    android:background="@drawable/background_login_register"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        style="@style/Button_Confirm_Forms"
        android:text="Finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxtPassword"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton_register"
        style="@style/Button_Confirm_Forms"
        android:layout_marginTop="10dp"
        android:text="Já Possuo uma Conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerButton"


        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_smarclass_sem_fundo" />

    <EditText
        android:id="@+id/edTxtFirstName"
        style="@style/Edit_Text_Forms"
        android:layout_marginTop="44dp"
        android:hint="Primeiro nome"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <EditText
        android:id="@+id/edTxtLastName"
        style="@style/Edit_Text_Forms"
        android:layout_marginTop="10dp"
        android:hint="Último nome"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxtFirstName"

        />
    <EditText
        android:id="@+id/edTxtDocument_Register"
        style="@style/Edit_Text_Forms"
        android:layout_marginTop="10dp"
        android:hint="CPF"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxtLastName"
        />

    <EditText
        android:id="@+id/edTxtEmail"
        style="@style/Edit_Text_Forms"
        android:layout_marginTop="10dp"
        android:hint="E-mail"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxtDocument_Register"
        />
    <EditText
        android:id="@+id/edTxtPassword"
        style="@style/Edit_Text_Forms"
        android:layout_marginTop="10dp"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edTxtEmail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>