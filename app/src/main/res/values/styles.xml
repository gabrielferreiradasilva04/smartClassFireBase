<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Edit_Text_Forms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_forms</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="Button_Confirm_Forms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_confirm_forms</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_Institutions_RecyclerView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ProgressBar_ProfileLoading">
        <item name="android:progressTint">@color/dark_orchid</item>
        <item name="android:progressBackgroundTint">@color/dark_orchid</item>
    </style>

    <style name="SimpleViewContainer">
        <item name="android:layout_height">630dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/simple_view_container</item>
    </style>
    <style name="InstitutionsHomeText">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProgressBar_Institution_menu" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:progressDrawable">@drawable/progressbar_background</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="ProgressBar_title">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="ProgressBar_TextBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="ProgressBar_bodyNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul_celeste</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    
    <style name="divider">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?actionBarDivider</item>
    </style>

    <style name="courses_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul_celeste</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="profile_subtitles">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="circle_capacity_edtxt">
        <item name="android:inputType">number</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/circle_button_capacity</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/azul_petroleo</item>
    </style>

    <style name="circle_capacity_edtxt_label">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/azul_petroleo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>
    <style name="warning_icon_progreesbar_institution">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/baseline_warning_24</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="institution_link_requests_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/container_link_requests_bg</item>
    </style>
    <style name="circle_image_button_profile_picture">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/circle_image_button_profile_picture</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="institution_link_requests_buttons">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/institution_link_request_buttons</item>
    </style>
    <style name="institution_link_requests_subtitles">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>